
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nombre_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del gasto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tv_categoria_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CategorÃ­a"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_fecha_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha del gasto"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cantidad_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad del gasto"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
